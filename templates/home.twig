{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
        <div class="row mb-2">

            <!-- Liste des articles du blog -- DEBUT -->
            {% for article in articles %}
            <div class="col-md-6">
                <div class="card flex-md-row mb-4 box-shadow h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <h3 class="mb-0">
                            <a class="text-dark" href="#">{{article.title}}</a>
                        </h3>
                        <div class="mb-1 text-muted">{{ article.date|date('F')|slice(0,3) }} {{ article.date|date('m')}}</div>
                        <p class="card-text mb-auto">{{article.description}} </p>
                        <a href="{{path('article_page', {'slug' : article.slug })}}">Continue reading</a>
                    </div>
                    <img class="card-img-right flex-auto d-none d-md-block" src="{{article.picture}}"
                        alt="Card image cap">
                </div>
            </div>
        {% endfor %}
        </div>
    </div>

    <main role="main" class="container">


    </main><!-- /.container -->
{% endblock %}